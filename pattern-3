#include<stdio.h>
//#include<conio.h>
void main()
{
     int i,j,k,n;
     //clrscr();
     printf("\n Enter no.of lines");
     scanf("%d,&n");
     for(i=1;i<=n;j++)
     {
         for(k=1;k<=(n-i);k++)
         {
            printf(" ");
         }
          for(j=1;j<=i;j++)
          {
            if(i%2==0)
            printf("#");
            else
            printf("*");
          }
          printf("\n");
     }
}
